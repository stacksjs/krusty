{
  "name": "krusty",
  "type": "module",
  "version": "0.1.0",
  "description": "A performant & customizable, cross-platform shell for your terminal.",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/krusty#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/krusty.git"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/krusty/issues"
  },
  "keywords": ["typescript", "shell", "cross-platform", "bun"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "krusty": "./dist/bin/cli.js"
  },
  "files": ["README.md", "dist"],
  "scripts": {
    "build": "bun --bun build.ts && bun run compile",
    "compile": "bun build ./bin/cli.ts --compile --minify --outfile bin/krusty",
    "compile:all": "bun run compile:linux-x64 && bun run compile:linux-arm64 && bun run compile:windows-x64 && bun run compile:darwin-x64 && bun run compile:darwin-arm64",
    "compile:linux-x64": "bun build ./bin/cli.ts --compile --minify --target=bun-linux-x64 --outfile bin/krusty-linux-x64",
    "compile:linux-arm64": "bun build ./bin/cli.ts --compile --minify --target=bun-linux-arm64 --outfile bin/krusty-linux-arm64",
    "compile:windows-x64": "bun build ./bin/cli.ts --compile --minify --target=bun-windows-x64 --outfile bin/krusty-windows-x64.exe",
    "compile:darwin-x64": "bun build ./bin/cli.ts --compile --minify --target=bun-darwin-x64 --outfile bin/krusty-darwin-x64",
    "compile:darwin-arm64": "bun build ./bin/cli.ts --compile --minify --target=bun-darwin-arm64 --outfile bin/krusty-darwin-arm64",
    "zip": "bun run zip:all",
    "zip:all": "bun run zip:linux-x64 && bun run zip:linux-arm64 && bun run zip:windows-x64 && bun run zip:darwin-x64 && bun run zip:darwin-arm64",
    "zip:linux-x64": "zip -j bin/krusty-linux-x64.zip bin/krusty-linux-x64",
    "zip:linux-arm64": "zip -j bin/krusty-linux-arm64.zip bin/krusty-linux-arm64",
    "zip:windows-x64": "zip -j bin/krusty-windows-x64.zip bin/krusty-windows-x64.exe",
    "zip:darwin-x64": "zip -j bin/krusty-darwin-x64.zip bin/krusty-darwin-x64",
    "zip:darwin-arm64": "zip -j bin/krusty-darwin-arm64.zip bin/krusty-darwin-arm64",
    "lint": "bunx --bun eslint .",
    "lint:fix": "bunx --bun eslint . --fix",
    "fresh": "bunx rimraf node_modules/ bun.lock && bun i",
    "changelog": "bunx changelogen --output CHANGELOG.md",
    "prepublishOnly": "bun --bun run build && bun run compile:all && bun run zip",
    "release": "bun run changelog && bunx bumpp package.json --all",
    "test": "bun test",
    "dev:docs": "bun --bun vitepress dev docs",
    "build:docs": "bun --bun vitepress build docs",
    "preview:docs": "bun --bun vitepress preview docs",
    "typecheck": "bun --bun tsc --noEmit",
    "bench": "bun --bun benchmark/index.ts"
  },
  "devDependencies": {
    "@stacksjs/docs": "^0.70.23",
    "@stacksjs/eslint-config": "^4.14.0-beta.3",
    "@types/bun": "^1.2.20",
    "buddy-bot": "^0.8.7",
    "bumpp": "^10.2.3",
    "bun-plugin-dtsx": "0.21.12",
    "bunfig": "^0.14.1",
    "changelogen": "^0.6.2",
    "lint-staged": "^16.1.5",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "unconfig": "0.3.10"
  },
  "lint-staged": {
    "*.{js,ts}": "bunx --bun eslint . --fix"
  }
}
